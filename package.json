{
  "name": "business-mensajeria",
  "version": "1.0.0",
  "description": "Microservicio de mensajería para envío de emails y SMS",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "worker": "node dist/infrastructure/queue/bullmq/workers/index.js",
    "worker:dev": "nodemon src/infrastructure/queue/bullmq/workers/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": ["messaging", "email", "sms", "notifications"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.7",
    "@sendgrid/mail": "^8.1.0",
    "twilio": "^4.19.0",
    "@aws-sdk/client-sns": "^3.460.0",
    "kafkajs": "^2.2.4",
    "axios": "^1.6.2",
    "handlebars": "^4.7.8",
    "form-data": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.14",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.10",
    "typescript": "^5.3.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.1"
  }
