# Server Configuration
PORT=3006
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/business_mensajeria
MONGODB_DB_NAME=business_mensajeria

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration - Nodemailer (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@businessapp.com
EMAIL_FROM_NAME=BusinessApp

# Email Configuration - SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@businessapp.com

# SMS Configuration - Twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SMS Configuration - AWS SNS (Alternative)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_SNS_SENDER_ID=BusinessApp

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=business-mensajeria
KAFKA_GROUP_ID=business-mensajeria-group
KAFKA_TOPIC_MESSAGES=business.messages
KAFKA_TOPIC_LOGS=business.logs

# Business-Report Service
REPORT_SERVICE_URL=http://localhost:3007
REPORT_SERVICE_API_KEY=your-report-api-key

# Queue Configuration
QUEUE_EMAIL_NAME=email-queue
QUEUE_SMS_NAME=sms-queue
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=60000

# Rate Limiting
EMAIL_RATE_LIMIT=50
SMS_RATE_LIMIT=10

# Security
API_KEY=your-api-key-here
CORS_ORIGIN=http://localhost:3000
